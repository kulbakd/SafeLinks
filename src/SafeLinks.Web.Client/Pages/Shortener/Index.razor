@page "/"

<main class="mx-2 text-center">
  <EditForm EditContext="editContext" OnValidSubmit="ShortenUrl">
    <DataAnnotationsValidator />
    
    <h1 class="mb-3">SafeLinks</h1>
    <p class="mb-4 subtitle">Shorten your links <span class="text-black-50">and we will make sure they are safe for people you send them to.</span> <span class="text-danger">*</span></p>

    <div class="form-floating">
      <InputText @bind-Value="generateShortcutCommand.Url" AdditionalAttributes="UrlInputAttributes" />
      <label for="url-input">Your URL</label>
    </div>
    <div class="floating-validation mb-3">
      <ValidationMessage For="() => generateShortcutCommand.Url" />
    </div>

    @if (ShowShortenError)
    {
      <div class="alert alert-danger p-1 mt-2" role="alert">
        @ShortenError
      </div>
    }

    <div class="d-flex flex-row justify-content-center mb-2">
      <button type="submit" class="btn btn-lg btn-primary">
        Make it short!
      </button>
    </div>
    
    <p class="text-black-50 asterisk-note"><span class="text-danger">*</span> Url Safety Check is not yet available. This feature will be available in the future.</p>
  </EditForm>
</main>
